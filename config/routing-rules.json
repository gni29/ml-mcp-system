# config/routing-rules.json
cat > config/routing-rules.json << 'EOF'
{
  "simple_queries": {
    "keywords": ["안녕", "도움말", "상태", "모드"],
    "maxComplexity": 0.3,
    "target": "router"
  },
  "complex_analysis": {
    "keywords": ["분석", "모델", "훈련", "예측", "시각화", "데이터"],
    "minComplexity": 0.6,
    "target": "processor",
    "requiresTools": true
  },
  "hybrid_tasks": {
    "keywords": ["비교", "검토", "추천"],
    "complexity": [0.3, 0.6],
    "target": "both"
  }
}
EOF

# config/memory-thresholds.json
cat > config/memory-thresholds.json << 'EOF'
{
  "router": {
    "maxMemoryMB": 6000,
    "warningThresholdMB": 5000,
    "autoUnload": false
  },
  "processor": {
    "maxMemoryMB": 28000,
    "warningThresholdMB": 25000,
    "autoUnload": true,
    "autoUnloadTimeoutMs": 600000
  },
  "system": {
    "maxTotalMemoryMB": 32000,
    "emergencyThresholdMB": 30000
  }
}
EOF
